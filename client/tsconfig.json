{
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": true,
        "module": "commonjs",
        "sourceMap": true,
        "target": "es6",
        "jsx": "react",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}